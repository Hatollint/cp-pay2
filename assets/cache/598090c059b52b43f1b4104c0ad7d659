	  $(document).ready(function(){
	      changeURL();
	  });
	  function changeURL(){
	    $.ajax({
	      url: location.path,
	      type: "POST",
	      data: {ajax: "checkURL", url: $("#shop_url").val()},
	      success: function(data){
	        console.log(data);
	        if(data == "1"){
	          $("#url_status").html('<div class="label label-success"  data-toggle="tooltip" data-placement="top" title="ОК"><i class="fa fa-check"></i></div>');
	        } else {
	          $("#url_status").html('<div class="label label-danger"  data-toggle="tooltip" data-placement="top" title="Ошибка"><i class="fa fa-remove"></i></div>');
	        }
	      }
	    })
	  }
	  function changeNotif(){
	    $.ajax({
	      url: location.path,
	      type: "POST",
	      data: {ajax: "changeNotif"},
	      success: function(data){
	        console.log(data);
	        if(data == "1"){
	          fly_p('1', 'Уведомления включены!');
	        } else {
	          fly_p('1', 'Уведомления отключены!');
	        }
	      }
	    })
	  }
	  <?php endif; ?>
	  function changeGame(){
	    if($("#shop_game option:selected").val() == "0"){
	      fly_p('2', 'Укажите игру!');
	    } else {
	      $.ajax({
	      
	        url: location.pathname,
	        type: "POST",
	        data: {ajax: "changeGame", shop_game: $("#shop_game option:selected").val()},
	        success: function (data) {
	          if(data == 1){
	            fly_p('1', 'Данные успешно сохранены!');
	            $("#saveName").html("").show().delay(3000);
	          } else {
	            fly_p('2', 'Произошла ошибка, повторите попытку!');
	            $("#saveName").html("").show().delay(3000);
	          }
	        }
	        
	      })
	    }
	  }
	  <?php if($project['shop_status'] == 1): ?>
	  function changeCommision(){
	    $.ajax({
	    
	      url: location.pathname,
	      type: "POST",
	      data: {ajax: "changeCommision", shop_commision: $("#shop_commision option:selected").val()},
