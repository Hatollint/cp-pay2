	  $("#saveName").click(function(){
	    $("#saveName").html("<img src=\"https://vk.com/images/upload_inv.gif\" style=\"margin: 5px;\">").show().delay(3000);
	    
	    if ($("#shop_name").val() == "") {
	      fly_p('2', 'Введите название проекта!');
	      $("#saveName").html("").show().delay(3000);
	    } else {
	      
	      $.ajax({
	      
	        url: location.pathname,
	        type: "POST",
