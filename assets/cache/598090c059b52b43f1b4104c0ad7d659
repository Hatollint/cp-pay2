	  function saveRURL(){
	    $.ajax({
	    
	      url: location.pathname,
	      type: "POST",
	      data: {ajax: "saveRURL", fail_url: $("#shop_fail_url").val(), success_url: $("#shop_success_url").val()},
	      success: function (data) {
	        if(data == 1){
	          fly_p('1', 'Адреса сохранены!');
	        } else {
	          fly_p('2', 'Произошла ошибка, повторите попытку!');
	        }
	      }
	      
	    })
	  }
